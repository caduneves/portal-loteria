<section v-if="data.length">
    <h3 class="color">Prêmios Acumulados</h3>

    <div class="table-responsive table-stats" v-if="data[0]">
        <table class="table" cellpadding="0" cellspacing="0" border="0">
            <tr>
                <th></th>
                <th class="text-center text-uppercase color">Valor</th>
                <th width="150"></th>
                <th class="text-center text-uppercase color">Concurso</th>
                <th class="text-center text-uppercase color">Data</th>
                <th class="text-center text-uppercase color">Ganhadores</th>
                <th width="150" class="text-uppercase color">Estados</th>
            </tr>
            <tr v-for="(item, index) in data[0]">
                <td class="text-center">{{index+1}}</td>
                <td class="text-center color"><strong>{{ item.Premio.format("c") }}</strong></td>
                <td>
                    <div class="bar">
                        <div class="bar-inner bg" v-bind:style="{ width: item.Porcentagem+'%', opacity: (item.Porcentagem/100) }"></div>
                    </div>
                </td>
                <td class="text-center">{{ item.Concurso }}</td>
                <td class="text-center">{{ item.DataResultado.format("dd/MM/yyyy") }}</td>
                <td class="text-center">{{ item.QuantidadeDeGanhadores }}</td>
                <td>{{ item.Estados }}</td>
            </tr>
        </table>
    </div>

    <br>

    <h3 class="color">Prêmios Individuais</h3>
