@{
    ViewData["Title"] = "Indique um Amigo | Loteria Brasil";
}
@section metas{
    <meta name="robots" content="noindex, follow">
    <meta property="og:title" content="Indique um Amigo | Loteria Brasil" />
    <meta property="og:image" content="@($"{ViewBag.Url}images/main/logo.png")" />
    <meta name="description" content="Aposte nas principais loterias atraves do Portal Loteria Brasil: apostas na mega sena, duplasena e nas principais loterias de forma r&#225;pida e segura." />

}
@Html.Partial("_StaticBanner", "top-banner")

<section class="content-newsletter" data-vue="Indique">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <div class="col-xs-12 col-sm-12 col-md-12">
                    <h1 class="title-h1">indique um amigo</h1>
                </div>
                <div class="col-xs-12 col-sm-12 col-md-12">
                    <div class="row">
                        <div class="col-md-12">
                            <input type="text" class="form-control" v-model="name" placeholder="Seu nome">
                        </div>
                        <div class="col-md-12">
                            <input type="text" class="form-control" v-model="dest" placeholder="Nome do destinatário">
                        </div>
                        <div class="col-md-12">
                            <input type="email" class="form-control" v-model="email" placeholder="Email do destinatário">
                        </div>
                        <div class="col-md-12">
                            <textarea class="form-control" rows="4" placeholder="Comentário" v-model="comment"></textarea>
                        </div>
                        <div class="col-md-6">
                            <button type="button" class="btn btn-lg btn-success btn-pagar" v-on:click="clean()">Limpar</button>
                        </div>
                        <div class="col-md-6">
                            <button type="button" class="btn btn-lg btn-success btn-pagar" v-on:click="send()">Enviar</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
