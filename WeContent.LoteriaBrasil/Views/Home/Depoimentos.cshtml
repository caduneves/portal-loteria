
<section id="depoimentos" data-vue="BannerDepoimentos">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h4>
                    depoimentos de quem apostou na loteria brasil
                </h4>
            </div>
            <div class="col-sm-3 col-md-3" v-for="depoimento in depoimentos">
                <div class="panel panel-default">
                    <div class="panel-body">
                        <div class="product-wid-rating">
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star"></i>
                            <span class="depoimento_data">{{ depoimento.Data }}</span>
                        </div>
                        <p class="depoimento_text" v-bind:title="depoimento.Texto">
                            {{ depoimento.TextoReduzido }}
                        </p>
                    </div>
                    <div class="panel-footer">
                        <div class="media">
                            <div class="media-left">
                                <a href="#">
                                    <img class="media-object" src="/images/main/icon_depoimentos.png" alt="...">
                                </a>
                            </div>
                            <div class="media-body">
                                <h4 class="media-heading">{{ depoimento.NomeUsuarioExibicao }}</h4>
                                <span class="depoimentobg_label_loteria.png_local">{{ depoimento.CidadeExibicao }}/{{ depoimento.Estado }}</span>
                            </div>
                        </div>

                    </div>
                </div>
            
        </div>
    </div>
</section>
