@section metas{
    <meta name="robots" content="index, follow">
    <meta property="og:title" content="@(ViewBag.sectionName) | Loteria Brasil" />
    <meta property="og:image" content="@($"{ViewBag.Url}images/main/logo.png")" />
    <meta name="description" content="" />
}

<section id="resultadosList" class="page-resultados resultados_loteria" data-vue="ResultadosController">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1>Resultados</h1>
                <p class="subtitulo">Confira os resultados das loterias. Pode ser que a sua vez de se tornar um milionário tenha chegado!</p>
            </div>
        </div>
    </div>

    <section class="wrap-allresults-list">
        <div class="container">
            <div class="col-lg-12 wrap-menu-resultados">
                <ul class="menu_resultados">
                    <li><a v-on:click.stop.prevent="goTo('mega-sena')" href="#mega-sena">mega-sena</a></li>
                    <li><a v-on:click.stop.prevent="goTo('dupla-sena')" href="#dupla-sena">dupla sena</a></li>
                    <li><a v-on:click.stop.prevent="goTo('lotomania')" href="#lotomania">lotomania</a></li>
                    <li><a v-on:click.stop.prevent="goTo('quina')" href="#quina">quina</a></li>
                    <li><a v-on:click.stop.prevent="goTo('loteria-federal')" href="#loteria-federal">loteria federal</a></li>
                    <li><a v-on:click.stop.prevent="goTo('loteca')" href="#loteca">loteca</a></li>
                    <li><a v-on:click.stop.prevent="goTo('lotogol')" href="#lotogol">lotogol</a></li>
                    <li><a v-on:click.stop.prevent="goTo('lotofacil')" href="#lotofacil">lotofácil</a></li>
                    <li><a v-on:click.stop.prevent="goTo('timemania')" href="#timemania">timemania</a></li>
                    <li><a v-on:click.stop.prevent="goTo('diadesorte')" href="#dia-de-sorte">dia de sorte</a></li>
                </ul>
            </div>
        </div>

        <div class="bg-light" v-for="item in resultadoSelected" v-bind:class="item.className">
            <div class="anchor" v-bind:id="item.className"></div>
            <div class="container">
                <div class="col-lg-12">
                    <div class="wrap-result-list">
                        @Html.Partial("_Result.cshtml")
                    </div>
                </div>
            </div>
        </div>

    </section>

</section>

<script>
    var acc = document.getElementsByClassName("accordion-lotfederal");
    var i;

    for (i = 0; i < acc.length; i++) {
        acc[i].addEventListener("click", function () {
            this.classList.toggle("active");
            var panel = this.nextElementSibling;
            if (panel.style.maxHeight) {
                panel.style.maxHeight = null;
            } else {
                panel.style.maxHeight = panel.scrollHeight + "px";
            }
        });
    }
</script>